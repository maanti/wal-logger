{
    "name": "wal-logger",
    "version": "0.0.1",
    "description": "Logs all changes in a database using PostgreSQL's logical decoding",
    "main": "index.js",
    "nyc": {
        "extension": [
            ".ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true,
        "exclude": [
            "dist",
            "coverage",
            "migrations",
            "scripts",
            "app/interfaces"
        ]
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "nyc mocha --exit",
        "start": "tsc && node dist/index.js",
        "postinstall": "node scripts/postinstall.js"
    },
    "keywords": [
        "logical-replication",
        "CDC",
        "WAL",
        "PostgreSQL"
    ],
    "author": "Matvey Antipov",
    "license": "apache-2.0",
    "dependencies": {
        "body-parser": "^1.19.0",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "joi": "^14.3.1",
        "node-cache": "^5.1.0",
        "pg": "^7.14.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/joi": "^14.3.4",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.14",
        "@types/pg": "^7.11.2",
        "@types/sinon": "^7.5.1",
        "@types/supertest": "^2.0.8",
        "mocha": "^6.2.3",
        "nyc": "^14.1.1",
        "sinon": "^7.5.0",
        "supertest": "^4.0.2",
        "ts-node": "^8.5.4",
        "ts-sinon": "^1.0.24",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2"
    }
}
